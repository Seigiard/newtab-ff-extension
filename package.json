{
  "name": "newtab-ff-extension",
  "version": "1.1.1",
  "description": "A Firefox extension that puts your homepage on new tabs, without stealing keyboard focus from the address bar.",
  "scripts": {
    "dev:firefox": "web-ext run --source-dir ./src/",
    "dev:watefox": "web-ext run -f /Applications/Waterfox.app/Contents/MacOS/waterfox-bin --source-dir ./src/",
    "dev:floorp": "web-ext run -f /Applications/Floorp.app/Contents/MacOS/floorp --source-dir ./src/",
    "build": "npm run lint && web-ext build --source-dir ./src/ --overwrite-dest",
    "lint": "dotenv -- web-ext lint --source-dir ./src/",
    "sign": "dotenv -- web-ext sign --source-dir ./src/ --artifacts-dir ./web-ext-artifacts/ --channel listed  --amo-metadata=metadata.json"
  },
  "author": "Andrej Borisenko & Leigh Brenecki",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Seigiard/newtab-ff-extension/issues"
  },
  "homepage": "https://github.com/Seigiard/newtab-ff-extension",
  "dependencies": {
    "web-ext": "^8.9.0"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
}
